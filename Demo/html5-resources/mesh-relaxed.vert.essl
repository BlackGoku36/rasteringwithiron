#version 100

uniform mediump mat3 N;
uniform mediump mat4 M;
uniform mediump mat4 WVP;

varying mediump vec3 wnormal;
attribute mediump vec3 nor;
varying mediump vec2 texcoords;
attribute mediump vec2 tex;
varying mediump vec3 FragPos;
attribute mediump vec4 pos;

void main()
{
    wnormal = normalize(N * nor);
    texcoords = tex;
    FragPos = vec3((M * vec4(pos.xyz, 1.0)).xyz);
    gl_Position = WVP * vec4(pos.xyz, 1.0);
}

