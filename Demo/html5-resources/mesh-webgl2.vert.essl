#version 300 es

uniform mat3 N;
uniform mat4 M;
uniform mat4 WVP;

out vec3 wnormal;
in vec3 nor;
out vec2 texcoords;
in vec2 tex;
out vec3 FragPos;
in vec4 pos;

void main()
{
    wnormal = normalize(N * nor);
    texcoords = tex;
    FragPos = vec3((M * vec4(pos.xyz, 1.0)).xyz);
    gl_Position = WVP * vec4(pos.xyz, 1.0);
}

