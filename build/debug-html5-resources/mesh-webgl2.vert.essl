#version 300 es

uniform mat4 W;
uniform mat4 P;
uniform mat4 V;

out vec2 texcoords;
in vec2 tex;
out vec3 FragPos;
in vec4 pos;
out vec3 wnormal;
in vec3 nor;

void main()
{
    texcoords = tex;
    FragPos = vec3((W * vec4(pos.xyz, 1.0)).xyz);
    wnormal = mat3(vec3(W[0].x, W[0].y, W[0].z), vec3(W[1].x, W[1].y, W[1].z), vec3(W[2].x, W[2].y, W[2].z)) * nor;
    gl_Position = (P * V) * vec4(FragPos, 1.0);
}

