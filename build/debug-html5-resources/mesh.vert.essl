#version 100

uniform mat3 N;
uniform mat4 M;
uniform mat4 WVP;

varying vec3 wnormal;
attribute vec3 nor;
varying vec2 texcoords;
attribute vec2 tex;
varying vec3 FragPos;
attribute vec4 pos;

void main()
{
    wnormal = normalize(N * nor);
    texcoords = tex;
    FragPos = vec3((M * vec4(pos.xyz, 1.0)).xyz);
    gl_Position = WVP * vec4(pos.xyz, 1.0);
}

