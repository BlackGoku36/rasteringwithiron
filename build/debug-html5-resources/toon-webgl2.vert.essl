#version 300 es

uniform mat4 W;
uniform mat4 P;
uniform mat4 V;

out vec3 Normal;
in vec3 nor;
out vec3 Pos;
in vec3 pos;

void main()
{
    Normal = mat3(vec3(W[0].x, W[0].y, W[0].z), vec3(W[1].x, W[1].y, W[1].z), vec3(W[2].x, W[2].y, W[2].z)) * nor;
    Pos = mat3(vec3(W[0].x, W[0].y, W[0].z), vec3(W[1].x, W[1].y, W[1].z), vec3(W[2].x, W[2].y, W[2].z)) * pos;
    gl_Position = ((P * V) * W) * vec4(pos, 1.0);
}

